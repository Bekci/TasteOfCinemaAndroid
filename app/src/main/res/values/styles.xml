<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/themeViolet</item>
        <item name="colorPrimaryDark">@color/themeHardViolet</item>
        <item name="colorAccent">@color/themeMagenta</item>
    </style>


    <style name="AppText">
    </style>

    <style name="AppTextTitleBigger" parent="AppText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/themeViolet</item>
        <item name="fontFamily">@font/libertine_bold</item>
    </style>

    <style name="AppTextTitle" parent="AppText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/themeViolet</item>
        <item name="fontFamily">@font/libertine_bold</item>
    </style>

    <style name="AppTextDetailBigger" parent="AppText">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/libertine</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="AppTextDetail" parent="AppText">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/libertine</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
